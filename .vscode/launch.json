{
    "configurations": [
        {
            "name": "Python: Attach using Process Id",
            "type": "python",
            "request": "attach",
            "debugServer": 5678,
            "justMyCode": false
        },
        {
            "name": "Ansible Debug",
            "type": "python",
            "request": "launch",
            "program": "/home/jborean/dev/ansible/bin/ansible-playbook",
            "args": [
                "main.yml",
                "-vvv"
            ],
            "env": {
                "ANSIBUG_LOG_FILE": "debug.log",
                "ANSIBUG_LOG_LEVEL": "debug",
                "ANSIBLE_COLLECTIONS_PATHS": "${workspaceFolder}/src/ansibug:${ANSIBLE_COLLECTIONS_PATHS}",
                "ANSIBLE_CALLBACKS_ENABLED": "ansibug.dap.debug",
                "ANSIBLE_STRATEGY": "ansibug.dap.debug"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "ansibug",
            "args": [
                "launch",
                "--log-file",
                "debug.log",
                "--log-level",
                "debug",
                "--wait-for-client",
                "1234",
                "main.yml",
            ],
            "justMyCode": false,
            "subProcess": true,
        },
    ]
}